{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "./dist",
    "noEmit": false,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "tests/**/*",
    "playground/**/*",
    "**/*.test.ts",
    "**/*.test-d.ts",
    "examples/**/*",
    "docs/**/*",
    "node_modules",
    "dist"
  ]
}